extends ../_layouts/base
include ../_modules/contact-form/contact-form

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
    main.formgral
        section.formgral__hero
            h1.formgral__title= site.data.formgral.title
        section.formgral__body
            .formgral__form
                .container
                    .row
                        .col-xs-24.col-sm-20.col-sm-offset-2.col-md-16.col-md-offset-4.col-lg-14.col-md-offset-5
                            +contact-form(site.data.formgral.form)
