extends ../_layouts/base
include ../_modules/cta/cta

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
    main.about
        section.about__hero
            h1.about__title= site.data.about.title
        section.about__body
            .container-fluid
                each item in site.data.about.content
                    if item.type == 'text'
                        .row.-short
                            .col-xs-24.col-sm-18.col-sm-offset-3.col-md-16.col-md-offset-4
                                p.wow.fadeInLeft(data-wow-delay="#{(index + 1)/4}s")!= item.cont
                    if item.type == 'video'
                        .row.-large
                            .about__video-wrapper
                            .col-xs-24
                                .row.-short
                                    .col-xs-24.col-sm-22.col-sm-offset-1.col-md-24.about__video-col.js-video
                                        img.img-responsive(src=item.cont.placeholder)
                                        .embed-responsive.embed-responsive-16by9
                                            iframe.embed-responsive-item(allowfullscreen)
                        
        section.about__cta
            +cta(site.data.about.cta)
