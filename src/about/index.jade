extends ../_layouts/base
include ../_modules/cta/cta

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
    main.about
        section.about__hero
            h1.about__title= site.data.about.title
        section.about__body
            .container-fluid
                each item in site.data.about.content
                    if item.type == 'text'
                        .row.-short
                            .col-xs-24.col-sm-18.col-sm-offset-3.col-md-14.col-md-offset-5.col-lg-12.col-md-offset-6
                                p!= item.cont
                    if item.type == 'video'
                        .row.-large
                            .about__video-wrapper
                            .col-xs-24
                                .row.-short
                                    .col-xs-24.col-sm-22.col-sm-offset-1.col-md-20.col-md-offset-2.video-col
                                        a
                                            img.img-responsive(src=item.cont.placeholder)
                        
        section.about__cta
            +cta(site.data.about.cta)
