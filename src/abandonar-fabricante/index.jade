extends ../_layouts/base
include ../_modules/cta/cta

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
    main.abandonar
        section.abandonar__hero
            .container
                .row
                    .col-xs-24.col-sm-20.col-md-16.col-lg-13.abandonar__data
                        h1.abandonar__title= site.data.abandonar.title
                        p.abandonar__subtitle= site.data.abandonar.subtitle
                    .abandonar__character            
                        img._body(src="/images/analisis/character.png")
                        img._arm(src="/images/analisis/arm.png")
                      
      
        section.abandonar__body
            .container
                .row
                    .col-xs-24.col-sm-18.col-sm-offset-3.abandonar__data
                        each item, index in site.data.abandonar.content
                          
                            if item.type == 'text'
                                p.wow.fadeInLeft(data-wow-delay="#{(index + 1)/4}s")=item.cont
                              
        section.abandonar__infograph
            .container
                .row
                    .col-xs-24
                        a(href="/images/abandonar/infografia.jpg", target="_blank")
                            img.img-responsive(src="/images/abandonar/infografia.jpg")


        section.abandonar__cta.wow.fadeInUpBig
            +cta(site.data.abandonar.cta)
