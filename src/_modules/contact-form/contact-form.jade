mixin contact-form(data, action, ld)
    form.contact-form(method="POST", id=ld)
        h3.contact-form__title=data.title
        .row
            each input, key in data.inputs

                if input.type == 'text'
                    .contact-form__group.col-xs-24.col-sm-12
                        label(for="id-#{input.name}")=input.label
                        input(type="text", placeholder=input.placeholder, input.attrs)
                if input.type == 'email'
                    .contact-form__group.col-xs-24.col-sm-12
                        label(for="id-#{input.name}")=input.label
                        input(type="email", placeholder=input.placeholder, input.attrs)
                if input.type == 'number'
                    .contact-form__group.col-xs-24.col-sm-12
                        label(for="id-#{input.name}")=input.label
                        input(type="number", placeholder=input.placeholder, name=input.name, id="id-#{input.name}", input.attrs)
                if input.type == 'checkbox'
                    .contact-form__group.col-xs-24.col-sm-12
                        label(for="id-#{input.name}")=input.label
                        input(type="checkbox", value="input.name", name=input.name, id="id-#{input.name}", input.attrs)
                if input.type == 'radio'
                    .contact-form__group.col-xs-24.col-sm-12
                        label(for="id-#{input.name}")=input.label
                        input(type="radio", value="input.name", name=input.name, id="id-#{input.name}",input.attrs)
                if input.type == 'select'
                    .contact-form__group.col-xs-24.col-sm-12
                        label.-select(for="id-#{input.name}")
                            span= input.label
                        select(value="input.name", name=input.name, id="id-#{input.name}",input.attrs)
                            each item in input.options
                                option(value="item-val")= item.name
                if input.type == 'textarea'
                    .contact-form__group.col-xs-24
                        label(for="id-#{input.name}")=input.label
                        textarea(value="input.name", name=input.name, id="id-#{input.name}")
            .contact-form__group.col-xs-24
                if action
                    input._button.-submit.-white(type="submit", value="#{action}")
                else
                    input._button.-submit.-white(type="submit", value="Enviar")
