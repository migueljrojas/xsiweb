extends ../_layouts/base
include ../_modules/cta/cta

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
    main.historia
        section.historia__hero
            h1.historia__title= site.data.historia.title
        section.historia__body
            h2= site.data.historia.subtitle
            .container
                each item, index in site.data.historia.moments
                    .row
                        .col-xs-22.col-sm-12.wow.fadeInUpBig(data-wow-delay="#{(index + 1)/4}s")
                            h3=item.title
                            p!=item.text
                            
