extends ../_layouts/base
include ../_modules/contact-form/contact-form

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
    main.blueprints
        section.blueprints__hero
            .container
                .row
                    .col-xs-24.col-sm-20.col-md-16.col-lg-13.blueprints__data
                        h1.blueprints__title= site.data.blueprints.title
                img.blueprints__character(src=site.data.analisis.character)
                        
        
        section.blueprints__body
            .blueprints__form
                .container
                    .row
                        .col-xs-24.col-sm-20.col-sm-offset-2.col-md-16.col-md-offset-4.col-lg-14.col-md-offset-5
                            +contact-form(site.data.blueprints.form)
            .container
                .row
                    .col-xs-24.col-sm-18.col-sm-offset-3.col-md-14.col-md-offset-5.col-lg-12.col-md-offset-6
                        each item in site.data.blueprints.content
                            if item.type == 'title'
                                h2=item.cont
                            
                            if item.type == 'text'
                                p=item.cont
                                
                            if item.type == 'subtitle'
                                h3=item.cont
                                ul
                                    each bullet in item.list
                                        li= bullet
                                    
                    
                    
