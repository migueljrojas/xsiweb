extends ../_layouts/base

include ../_modules/slider/slider
include ../_modules/cta/cta
include ../_modules/calculator/calculator


block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
    main.serviceitad
      
        section.serviceitad__hero
            .container
                .row
                    .serviceitad__hero__data.col-xs-24.col-sm-14.col-md-13
                        h2!=site.data.itad.hero.title
                        p!=site.data.itad.hero.desc
                        a._button.-white(href=site.data.itad.hero.btn.url)= site.data.itad.hero.btn.text
                    .serviceitad__hero__character.col-sm-11
                        img(src="/images/service-itad/hero.png")
      
        section.serviceitad__calculator
            .container
                .row
                    .col-xs-24.col-md-20.col-md-offset-2.wow.fadeInRightBig
                        +calculator(site.data.itad.calculator)
        
        
        section.serviceitad__mantenimiento 
            .container
                .row   
                    .col-xs-24.col-sm-12
                        p.mantenimiento__title= site.data.itad.servicioitad.title
                        div.mantenimiento__img.js-video
                            img(src= site.data.itad.servicioitad.img)
                            .embed-responsive.embed-responsive-16by9
                                iframe.embed-responsive-item(allowfullscreen)
                        
                        .col-xs-24.col-sm-12.col-md-10.col-md-offset-2
                    
                    .col-xs-24.col-sm-12.col-md-12
                        .row.itad__services
                            div.icono.col-xs-8.col-sm-4
                              img.img-responsive(src= site.data.itad.servicioitad.costos.img)
                            div.content.col-xs-16
                              p.servicioitad__title=  site.data.itad.servicioitad.costos.title
                              p.servicioitad__text!=   site.data.itad.servicioitad.costos.text1 
                              p.servicioitad__text!=   site.data.itad.servicioitad.costos.text2
                        
                        .row.itad__services
                            div.icono.col-xs-8.col-sm-4
                              img.img-responsive(src= site.data.itad.servicioitad.riesgos.img)
                            div.content.col-xs-16
                              p.servicioitad__title=  site.data.itad.servicioitad.riesgos.title
                              p.servicioitad__text!=   site.data.itad.servicioitad.riesgos.text1 
                              p.servicioitad__text!=   site.data.itad.servicioitad.riesgos.text2  
                              
                        .row.itad__services
                            div.icono.col-xs-8.col-sm-4
                              img.img-responsive(src= site.data.itad.servicioitad.eficiencia.img)
                            div.content.col-xs-16
                              p.servicioitad__title=  site.data.itad.servicioitad.eficiencia.title
                              p.servicioitad__text!=   site.data.itad.servicioitad.eficiencia.text1 
                              p.servicioitad__text!=   site.data.itad.servicioitad.costos.text2          


        section.servicetpm__ctaone.wow.fadeInLeftBig
          +cta(site.data.itad.ctaone)
                          
        section.servicios
            .container
                .row
                    p.servicios__title= site.data.itad.servicios.title
                    p.servicios__desc=  site.data.itad.servicios.desc
                    ul
                        each item in site.data.itad.servicios.items
                            li.col-xs-24.col-sm-8.col-md-8                             
                              div.servicios__content
                                  div.servicios__img
                                    img(src= item.img)
                                  p.servicios__article-title= item.title
                                  p.servicios__article-desc= item.desc
                    
                    div.procesoitad__img 
                        img(src=site.data.itad.servicios.img)
                      
        
        section.servicetpm__ctatwo.wow.fadeInLeftBig
          +cta(site.data.itad.ctatwo)          

        section.serviceitad__opiniones
            .container 
                .row
                    p.serviceitad__opiniones__title= site.data.itad.opiniones.title
                    p.serviceitad__opiniones__desc= site.data.itad.opiniones.desc
                    +slider('opiniones__slider')
                        each slide in site.data.itad.opiniones.slides
                            .serviceitad__opiniones__slider
                                  .container.row
                                      .serviceitad__opiniones__slider-img.col-xs-24.col-sm-8.col-sm-offset-2
                                          img(src= slide.img)
                                      .serviceitad__opiniones__slider-text.col-xs-24.col-sm-13
                                          p.slide__title= slide.title
                                          p.slide__text= slide.text


        section.servicetpm__ctathree.wow.fadeInLeftBig
            +cta(site.data.itad.ctathree)
        
        section.noticias 
            .container-fluid
                  .row
                      .novedades__container.col-xs-24.col-sm-12.col-md-12
                          p.novedades__title= site.data.itad.noticias.novedades.title
                          ul.novedades__articles
                              each article in site.data.itad.noticias.novedades.articles
                                  li.row
                                    .col-xs-24.col-sm-8.col-md-8
                                      div.novedades__img
                                          img(src= article.img)
                                    div.novedades__content.col-xs-24.col-sm-16.col-md-16
                                        p.novedades__article-title= article.title
                                        p.novedades__article-desc= article.desc
                                        a.btn__more= article.link
                                                
                          
                      .informes__container.col-xs-24.col-sm-12.col-md-12
                          p.informes__title= site.data.itad.noticias.informes.title
                          ul.informes__articles
                              each article in site.data.itad.noticias.informes.articles
                                  li.row
                                      p.informes__category= article.category
                                      .col-xs-24.col-sm-8.col-md-8
                                        div.informes__img
                                            img(src= article.img)
                                      div.informes__content.col-xs-24.col-sm-16.col-md-16
                                          p.informes__article-title= article.title
                                          p.informes__article-desc= article.desc
                                          a.btn__more= article.link    
                                                                 
