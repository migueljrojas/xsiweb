extends _layouts/base

include _modules/slider/slider
include _modules/cta/cta
include _modules/suscribe/suscribe
include _modules/calculator/calculator

block content
    main.home
        section.home__hero
            +slider('home__slider')
                each slide in site.data.home.slider
                    .home__slider__slide(style="background:url(#{slide.img}) no-repeat top right;")
                        .container
                            .home__slider__data
                                h2=slide.title
                                p=slide.desc
                                a._button.-white(href=slide.btn.url)= slide.btn.text
                                
        section.home__calculator
            .container
                .row
                    .col-xs-24.col-md-20.col-md-offset-2.wow.fadeInRightBig
                        h1.temp-title ES HORA DE DOMINAR SU IT
                        +calculator(site.data.home.calculator)
      
        section.home__porquexsi
            .container
                p.home__porquexsi__title= site.data.home.porquexsi.title
                
                ul.row
                    each item, index in site.data.home.porquexsi.items
                      li.home__porquexsi__items.col-xs-24.col-sm-12.col-md-6.wow.bounceInUp(data-wow-delay="#{(index + 1)/4}s")
                          div.home__porquexsi__img
                            img(src=item.icono)
                          p.home__porquexsi__item-title= item.titulo
                          p.home__porquexsi__item-desc=  item.texto
        
        section.home__gestionit.row 
            div.home__gestionit__img.col-xs-24.col-sm-24.col-md-14.wow.fadeInLeftBig.js-video
                img(src= site.data.home.gestionit.img)
                .embed-responsive.embed-responsive-16by9
                    iframe.embed-responsive-item(allowfullscreen)
            div.home__gestionit__content.col-xs-24.col-sm-24.col-md-10.wow.fadeInRightBig
                p.home__gestionit__title= site.data.home.gestionit.title
                p.home__gestionit__desc= site.data.home.gestionit.desc1
                p.home__gestionit__desc= site.data.home.gestionit.desc2

        section.home__cta.wow.fadeInUpBig
            +cta(site.data.home.cta)
      
        section.soyxsi
            .container-fluid
                .row
                    div.it.col-xs-24.col-sm-24.col-md-12
                        div.row
                            div.col-xs-12.soyxsi__data
                                p.it__title= site.data.home.it.title
                                a.button__soy.btn__soy-it ¿Por qué elegir xsi?
                            div.it__img.col-xs-12
                                img(src= site.data.home.it.img)
                                  
                    div.it-open.col-xs-24
                        .row
                            .btn__close
                            div.col-xs-12.col-md-8.soyxsi__data
                                p.it__title= site.data.home.it.title
                                ul
                                  each option in site.data.home.it.options
                                    li 
                                      | <i class="fa fa-check-circle" aria-hidden="true"></i>
                                      p= option.text
                                a.button__soy.btn__soy-it Me Convencieron

                            div.it__img.col-xs-12.col-md-6
                              img(src= site.data.home.it.img)              
                        
                    div.finanzas.col-xs-24.col-sm-24.col-md-12 
                        div.row
                            div.finanzas__img.col-xs-12  
                                img(src= site.data.home.finanzas.img) 
                            div.col-xs-12.soyxsi__data
                                p.finanzas__title= site.data.home.finanzas.title
                                a.button__soy.btn__soy-finanzas ¿Por qué elegir xsi?
                                
                    div.finanzas-open.col-xs-24
                        .row
                            .btn__close
                            div.col-md-6
                            div.col-xs-12.col-md-10.soyxsi__data
                                p.finanzas__title= site.data.home.finanzas.title
                                ul
                                  each option in site.data.home.finanzas.options
                                    li 
                                      | <i class="fa fa-check-circle" aria-hidden="true"></i>
                                      p= option.text
                                a.button__soy.btn__soy-it Me Convencieron

                            div.finanzas__img.col-xs-12.col-md-6
                              img(src= site.data.home.finanzas.img) 

      
        section.home__slider-xsi
            +slider('home__slider-xsi')
                each slide in site.data.home.sliderxsi
                    .container
                        .row
                            .home__slider-xsi-img.col-xs-24.col-sm-12.col-md-6.col-md-offset-6
                                img(src= slide.img)
                            .home__slider-xsi-text.col-xs-24.col-sm-12.col-md-8
                                p= slide.text  
           
      
        section.home__clients
            div.container 
                p.home__clients__title= site.data.clientes.clientes.title
                ul.row 
                  each client, index in site.data.clientes.clientes.clients 
                    li.col-xs-12.col-sm-6.wow.fadeInUp(data-wow-delay="#{(index + 1)/8}s")
                        div.home__clients__img 
                            img(src=client.img)
                
      
        section.home__novedades
        
            .container.home__novedades__container        
                .row
              
                p.home__novedades__title= site.data.novedades.novedades.title
                
                ul.home__novedades__articles.row
                  each article in site.data.novedades.novedades.articles  
                    li.col-xs-24.col-sm-12.col-md-6
                        div.home__novedades__img
                            img(src=article.img)
                        
                        p.home__novedades__article-title= article.title
                        p.home__novedades__article-desc= article.desc
        
        +suscribe
