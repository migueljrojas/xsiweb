extends ../_layouts/base
include ../_modules/job/job
include ../_modules/cta/cta

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
    main.jobs
        section.jobs__hero
            h1.jobs__title= site.data.jobs.title
        section.jobs__body
            .container
                .row
                    .col-xs-24.col-md-20.col-md-offset-2
                        p.jobs__desc= site.data.jobs.desc
                    .col-xs-24
                        each item in site.data.jobs.list
                            +job(item)
                            
            +cta(site.data.jobs.cta)
                        
                        
                        
